    </Content>
    <Content Include="runtimes\osx-arm64\native\libshamatar.dylib">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\win-x64\native\shamatar.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
