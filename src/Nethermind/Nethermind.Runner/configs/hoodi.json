{
  "$schema": "https://raw.githubusercontent.com/NethermindEth/core-scripts/refs/heads/main/schemas/config.json",
  "Init": {
    "ChainSpecPath": "chainspec/hoodi.json",
    "GenesisHash": "0xee51671431862fa37741fe6f543d4b0d19fbf80b85bf865c4aac1e59bf0e1216",
    "BaseDbPath": "nethermind_db/hoodi",
    "LogFileName": "hoodi.log",
    "DiagnosticMode": "MemDb",
    "DiscoveryEnabled": false
  },
  "TxPool": {
    "Size": 1024
  },
  "Sync": {
    "FastSync": true,
    "SnapSync": true,
    "FastSyncCatchUpHeightDelta": 10000000000
  },
  "Metrics": {
    "NodeName": "Hoodi"
  },
  "Blocks": {
    "TargetBlockGasLimit": 60000000
  },
  "JsonRpc": {
    "Enabled": true,
    "Timeout": 20000,
    "Host": "127.0.0.1",
    "Port": 8545,
    "EngineHost": "127.0.0.1",
    "EnginePort": 8551,
    "EngineEnabledModules": [ "net", "eth", "subscribe", "engine", "web3", "client", "flashbots" ],
    "UnsecureDevNoRpcAuthentication": true
  },
  "Merge": {
    "Enabled": true
  },
  "Discovery": {
    "DiscoveryVersion": "All"
  }
}
