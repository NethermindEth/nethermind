  <ItemGroup>
    <Compile Remove="out\**" />
    <Compile Remove="keystore\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="out\**" />
    <EmbeddedResource Remove="keystore\**" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="out\**" />
    <None Remove="keystore\**" />
  </ItemGroup>
  <Target Name="StoreGitHash" BeforeTargets="Build">
    <Exec Command="git describe --all --long &gt; git-hash" />
  </Target>
