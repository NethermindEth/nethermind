FROM mcr.microsoft.com/dotnet/core/sdk:5.0-alpine AS build

COPY . .

RUN apk add git && \
 git submodule update --init src/Dirichlet src/int256 && \
 dotnet publish src/Nethermind/Nethermind.State.Test.Runner -c release -o out

FROM mcr.microsoft.com/dotnet/core/sdk:5.0-alpine

COPY --from=build /out .

ENTRYPOINT [ "./nethtest" ]
