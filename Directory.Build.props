<Project>

  <PropertyGroup>
    <Configuration Condition="'$(Configuration)' == ''">Debug</Configuration>
    <ContinuousIntegrationBuild Condition="'$(CI)' == 'true'">true</ContinuousIntegrationBuild>
    <DefineConstants Condition="'$(EnableZkvm)' == 'true'">$(DefineConstants);ZKVM</DefineConstants>
    <InvariantGlobalization>true</InvariantGlobalization>
    <LangVersion>14.0</LangVersion>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <TargetFramework>net10.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <UseArtifactsOutput>true</UseArtifactsOutput>
    <WarningsNotAsErrors>NU1901;NU1902;NU1903</WarningsNotAsErrors>
  </PropertyGroup>

  <PropertyGroup Label="ProductInfo">
    <Copyright>Demerzel Solutions Limited</Copyright>
    <Product>Nethermind</Product>
  </PropertyGroup>

</Project>
